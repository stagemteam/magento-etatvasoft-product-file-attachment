<?xml version="1.0"?>
<config>
	<modules>
		<Etatva_Files>
			<version>0.1.2</version>
		</Etatva_Files>
	</modules>
	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Etatva_Files before="Mage_Adminhtml">Etatva_Files</Etatva_Files>
						<Etatva_Files_Adminhtml before="Mage_Downloadable">Etatva_Files_Adminhtml</Etatva_Files_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
	</admin>
     <adminhtml>
        <layout>
            <updates>
                <files>
                    <file>files/files.xml</file>
                </files>
            </updates>
        </layout>
    </adminhtml>
	<frontend>
		<routers>
            <files>
                <use>standard</use>
                <args>
                    <module>Etatva_Files</module>
                    <frontName>files</frontName>
                </args>
            </files>
        </routers>
		<layout>
            <updates>
                <files>
                    <file>files/files.xml</file>
                </files>
            </updates>
        </layout>
    </frontend>
	<global>
        <blocks>
			<files>
                <class>Etatva_Files_Block</class>
            </files>
			<catalog>
                <rewrite>
                    <product_view>Etatva_Files_Block_Product_View</product_view>
                </rewrite>
            </catalog>
			<adminhtml>
		        <rewrite>
	            	<catalog_product_edit_tabs>Etatva_Files_Block_Catalog_Product_Edit_Tabs</catalog_product_edit_tabs>
				</rewrite>
			</adminhtml>
		</blocks>
		<helpers>
			<files>
				<class>Etatva_Files_Helper</class>
			</files>
		</helpers>
		<models>
            <files>
                <class>Etatva_Files_Model</class>
                <resourceModel>files_mysql4</resourceModel>
            </files>
            <files_mysql4>
                <class>Etatva_Files_Model_Mysql4</class>
                <entities>
                    <files>
                        <table>files</table>
                    </files>
                </entities>
            </files_mysql4>
        </models>
		<resources>
            <files_setup>
                <setup>
                    <module>Etatva_Files</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </files_setup>
            <files_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </files_write>
            <files_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </files_read>
        </resources>
    </global>
	<stores>
    	<admin>
	        <design>
	             <theme>
	                 <default>Etatva</default>
	             </theme>
	        </design>
    	</admin>
	</stores>
	<default>
		<files>
			<files>
				<status>0</status>
				<formats>3gp,avi,bmp,doc,docx,flv,gif,jpeg,jpg,mp3,mp4,odf,odt,pdf,png,ppt,pptx,psd,rar,sql,swf,tiff,txt,xls,xlsx,zip</formats>
				<filesize>2000000</filesize>
				<allowdownload>0</allowdownload>
				<registerdownload>1</registerdownload>
				<linkssortby></linkssortby>
				<frontendlinks>3</frontendlinks>
				<showimage>1</showimage>
				<defaultimage>default</defaultimage>
				<typeimageheight>20</typeimageheight>
				<typeimagewidth>20</typeimagewidth>
            </files>
 		</files>
	</default>
</config>